{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "color": {
      "custom": true,
      "customDuotone": true,
      "customGradient": true,
      "defaultGradients": false,
      "defaultPalette": false,
      "duotone": [],
      "gradients": [
        {
          "slug": "blue-aqua",
          "gradient": "linear-gradient(135deg, #0054A6 0%, #00C2C7 100%)",
          "name": "Blue to Aqua"
        },
        {
          "slug": "navy-cyan",
          "gradient": "linear-gradient(120deg, #001E3C 0%, #00A8B7 100%)",
          "name": "Navy to Cyan"
        },
        {
          "slug": "abstract-light",
          "gradient": "linear-gradient(135deg, rgba(0, 84, 166, 0.08) 0%, rgba(0, 194, 199, 0.06) 100%)",
          "name": "Abstract Light"
        }
      ],
      "palette": [
        {
          "slug": "primary",
          "color": "#E2F2FF",
          "name": "Primary (Light Blue)"
        },
        {
          "slug": "secondary",
          "color": "#FFFFFF",
          "name": "Secondary (White)"
        },
        {
          "slug": "alternate",
          "color": "#F7FBFF",
          "name": "Alternate (Very Light Blue)"
        },
        {
          "slug": "brand-blue",
          "color": "#0054A6",
          "name": "Brand Blue"
        },
        {
          "slug": "brand-blue-hover",
          "color": "#003D7A",
          "name": "Brand Blue Hover"
        },
        {
          "slug": "aqua",
          "color": "#00C2C7",
          "name": "Aqua"
        },
        {
          "slug": "cyan",
          "color": "#00A8B7",
          "name": "Cyan"
        },
        {
          "slug": "navy",
          "color": "#001E3C",
          "name": "Navy"
        },
        {
          "slug": "navy-deep",
          "color": "#00376A",
          "name": "Deep Navy"
        },
        {
          "slug": "success",
          "color": "#10B981",
          "name": "Success Green"
        },
        {
          "slug": "text-primary",
          "color": "#00376A",
          "name": "Text Primary"
        },
        {
          "slug": "text-secondary",
          "color": "#3C4A57",
          "name": "Text Secondary"
        },
        {
          "slug": "text-muted",
          "color": "#6B7280",
          "name": "Text Muted"
        },
        {
          "slug": "border",
          "color": "#E2E8F0",
          "name": "Border"
        }
      ]
    },
    "layout": {
      "contentSize": "48rem",
      "wideSize": "80rem"
    },
    "spacing": {
      "customSpacingSize": true,
      "spacingSizes": [
        {
          "slug": "xs",
          "size": "0.5rem",
          "name": "Extra Small"
        },
        {
          "slug": "sm",
          "size": "1rem",
          "name": "Small"
        },
        {
          "slug": "md",
          "size": "1.5rem",
          "name": "Medium"
        },
        {
          "slug": "lg",
          "size": "2rem",
          "name": "Large"
        },
        {
          "slug": "xl",
          "size": "3rem",
          "name": "Extra Large"
        },
        {
          "slug": "2xl",
          "size": "4rem",
          "name": "2X Large"
        },
        {
          "slug": "3xl",
          "size": "6rem",
          "name": "3X Large"
        },
        {
          "slug": "4xl",
          "size": "8rem",
          "name": "4X Large"
        }
      ],
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "typography": {
      "customFontSize": true,
      "fontSizes": [
        {
          "slug": "xs",
          "size": "0.75rem",
          "name": "Extra Small"
        },
        {
          "slug": "sm",
          "size": "0.875rem",
          "name": "Small"
        },
        {
          "slug": "base",
          "size": "1rem",
          "name": "Base"
        },
        {
          "slug": "lg",
          "size": "1.125rem",
          "name": "Large"
        },
        {
          "slug": "xl",
          "size": "1.25rem",
          "name": "Extra Large"
        },
        {
          "slug": "2xl",
          "size": "1.5rem",
          "name": "2X Large"
        },
        {
          "slug": "3xl",
          "size": "1.875rem",
          "name": "3X Large"
        },
        {
          "slug": "4xl",
          "size": "2.25rem",
          "name": "4X Large"
        },
        {
          "slug": "5xl",
          "size": "3rem",
          "name": "5X Large"
        },
        {
          "slug": "6xl",
          "size": "3.75rem",
          "name": "6X Large"
        }
      ],
      "fontFamilies": [
        {
          "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
          "slug": "system",
          "name": "System Font"
        }
      ],
      "fontWeights": [
        {
          "slug": "normal",
          "value": "400",
          "name": "Normal"
        },
        {
          "slug": "medium",
          "value": "500",
          "name": "Medium"
        },
        {
          "slug": "semibold",
          "value": "600",
          "name": "Semi Bold"
        },
        {
          "slug": "bold",
          "value": "700",
          "name": "Bold"
        }
      ],
      "lineHeight": true
    },
    "custom": {
      "spacing": {
        "sectionY": "6rem",
        "sectionYLg": "8rem",
        "sectionYSm": "4rem",
        "contentGap": "4rem",
        "contentGapSm": "3rem",
        "gridGap": "2rem",
        "gridGapLg": "3rem",
        "gridGapSm": "1.5rem",
        "cardPadding": "2rem",
        "cardPaddingLg": "3rem",
        "elementGap": "1.5rem",
        "elementGapSm": "1rem"
      },
      "borderRadius": {
        "sm": "0.375rem",
        "md": "0.5rem",
        "lg": "0.75rem",
        "xl": "1rem",
        "2xl": "1.5rem",
        "full": "9999px"
      },
      "shadows": {
        "sm": "0 1px 3px rgba(0, 55, 106, 0.08)",
        "md": "0 4px 12px rgba(0, 55, 106, 0.10)",
        "lg": "0 10px 24px rgba(0, 55, 106, 0.12)",
        "accent": "0 4px 16px rgba(0, 84, 166, 0.15)"
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--primary)",
      "text": "var(--wp--preset--color--text-secondary)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--system)",
      "fontSize": "var(--wp--preset--font-size--base)",
      "fontWeight": "400",
      "lineHeight": "1.625"
    },
    "spacing": {
      "padding": {
        "top": "0",
        "right": "0",
        "bottom": "0",
        "left": "0"
      },
      "blockGap": "1.5rem"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--5-xl)",
          "fontWeight": "700",
          "lineHeight": "1.25"
        },
        "color": {
          "text": "var(--wp--preset--color--text-primary)"
        },
        "spacing": {
          "margin": {
            "bottom": "1.5rem"
          }
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--4-xl)",
          "fontWeight": "600",
          "lineHeight": "1.25"
        },
        "color": {
          "text": "var(--wp--preset--color--text-primary)"
        },
        "spacing": {
          "margin": {
            "bottom": "1.5rem"
          }
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--3-xl)",
          "fontWeight": "600",
          "lineHeight": "1.375"
        },
        "color": {
          "text": "var(--wp--preset--color--text-primary)"
        },
        "spacing": {
          "margin": {
            "bottom": "1.5rem"
          }
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--2-xl)",
          "fontWeight": "600",
          "lineHeight": "1.375"
        },
        "color": {
          "text": "var(--wp--preset--color--text-primary)"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xl)",
          "fontWeight": "600",
          "lineHeight": "1.5"
        },
        "color": {
          "text": "var(--wp--preset--color--text-primary)"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--lg)",
          "fontWeight": "600",
          "lineHeight": "1.5"
        },
        "color": {
          "text": "var(--wp--preset--color--text-primary)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--brand-blue)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--brand-blue-hover)"
          }
        }
      },
      "button": {
        "border": {
          "radius": "0.75rem"
        },
        "color": {
          "background": "var(--wp--preset--gradient--blue-aqua)",
          "text": "#ffffff"
        },
        "spacing": {
          "padding": {
            "top": "1rem",
            "right": "2rem",
            "bottom": "1rem",
            "left": "2rem"
          }
        },
        "typography": {
          "fontWeight": "600",
          "fontSize": "var(--wp--preset--font-size--base)"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--brand-blue-hover)"
          }
        }
      }
    },
    "blocks": {
      "core/navigation": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--base)",
          "fontWeight": "500"
        }
      },
      "core/post-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--5-xl)",
          "fontWeight": "700",
          "lineHeight": "1.25"
        },
        "color": {
          "text": "var(--wp--preset--color--text-primary)"
        }
      },
      "core/post-excerpt": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--base)",
          "lineHeight": "1.625"
        },
        "color": {
          "text": "var(--wp--preset--color--text-secondary)"
        }
      },
      "core/post-date": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--sm)"
        },
        "color": {
          "text": "var(--wp--preset--color--text-muted)"
        }
      },
      "core/post-author": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--sm)"
        },
        "color": {
          "text": "var(--wp--preset--color--text-muted)"
        }
      },
      "core/post-terms": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xs)"
        },
        "color": {
          "text": "var(--wp--preset--color--text-muted)"
        }
      },
      "core/separator": {
        "color": {
          "background": "var(--wp--preset--color--border)"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ],
  "customTemplates": [
    {
      "name": "blank",
      "title": "Blank",
      "postTypes": ["page", "post"]
    }
  ]
}
